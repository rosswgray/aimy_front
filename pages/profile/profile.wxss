/* pages/profile/profile.wxss */

.img-container {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
}

.avatar-large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 42%;
  transform: translate(-50%, -50%);
}
 
.line-container {
  width: 100vw;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  position: relative;
  background:#F0E6E5;
  height: 60rpx;
  margin-bottom: 30px;
 }

 .my-bookings {
  font-size: 35rpx;
  font-weight: bolder;
  color: #4A7FB0;
}

.my-favorites {
  font-size: 35rpx;
  font-weight: bolder;
  color: #4A7FB0;
}

 .card-container {
   width: 100%;
   align-items: center;
   padding: 0 20px 0 20px;
   box-sizing: border-box;
 }

 .profile-card {
  display: flex;
  background-color:white;
  border-radius: 7px;
  width: 319px;
  height: 80px;
  font-size: 10px;
  box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.15);
  margin-bottom: 10px;
}
.title-date {
  align-items: center;
}

.title {
  color: #4A7FB0;
  font-weight: bold;
  font-size: large;
}

.date {
  color: #4A7FB0;
  font-weight: bold;
  font-size: medium;
}

.profile-card-button {
  color: white;
  background-color: #AEC867;
  border-radius: 10rpx;
  width: 10px;
  height: 40px;
  align-items: right;
}