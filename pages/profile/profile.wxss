/* pages/profile/profile.wxss */

.img-container {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
}

.img-background {
}

.avatar-large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 42%;
  transform: translate(-50%, -50%);
}

.my-bookings {
  font-size: 35rpx;
  font-weight: bolder;
  color: #2A7AF1;
  margin-top: 20rpx;
  text-justify: center;
}
  

.divLine{
  background:#2A7AF1;
  width: 100%;
  height: 2rpx;
 }

 .card-container {
   width: 100%;
   align-items: center;
   padding: 0 10px;
   box-sizing: border-box;
 }

 .instructor_card {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color:white;
  border-radius: 7px;
  width: 319px;
  height: 100px;
  font-size: 10px;
  box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.15);
  margin-bottom: 10px;
}
.instructor_card_left {
  display:flex;
  flex-grow: 1;
  align-items: center;
}

.instructor_card_right{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: black 1px solid;
}

.activity_right {
  Width: 85px;
  Height: 82px;
  flex-shrink: 1;
  border-radius: 50px;
}

.activity_middle {
  padding-left: 8px;
}

.activity_left {
  Width: 85px;
  Height: 82px;
  padding-left: 8px;
  border-radius: 5px;
}

.profile-button {
  height: 50rpx;
  width: 120rpx;
  font-size: small;
}