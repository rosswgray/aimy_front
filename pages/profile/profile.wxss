/* pages/profile/profile.wxss */

.img-container {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
}

.avatar-large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 42%;
  transform: translate(-50%, -50%);
}

.welcome {
 text-align: center;
 font-size: 40rpx;
 color: #4A7FB0;
 margin-bottom: 10rpx;
}
 
.line-container {
  width: 100vw;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  position: relative;
  background:#F0E6E5;
  height: 60rpx;
  margin-bottom: 30px;
 }

 .my-bookings {
  font-size: 35rpx;
  font-weight: bolder;
  color: #4A7FB0;
}

.my-favorites {
  font-size: 35rpx;
  font-weight: bolder;
  color: #4A7FB0;
}

 .card-container {
   width: 100%;
   align-items: center;
   padding: 0 20px 0 20px;
   box-sizing: border-box;
 }

 .profile-card {
  display: flex;
  background-color:white;
  border-radius: 7px;
  width: 319px;
  height: 80px;
  font-size: 10px;
  box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.15);
  margin-bottom: 10px;
  align-items: center;
}
.title-date {
  align-items: center;
  padding-left: 10px;
}

.title {
  color: #4A7FB0;
  font-weight: bold;
  font-size: large;
}

.date {
  color: #4A7FB0;
  font-weight: bold;
  font-size: medium;
}

.btn-book {
  width: 80%;
  margin-top: 20rpx;
  background-color: #0ea094;
  color: white;
  font-size: 45rpx;
  border-radius: 3px; 
  width: 116px;
  height: 46px;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  margin-bottom: 25px;
  display: table-cell;
}

