<!-- IF user is not logged in, displaying the login button -->
<button class='login-button' wx:if="{{!loggedIn}}" bindtap="logIn">Please log in</button>





<!-- BOOKING BAR -->
<view wx:if="{{loggedIn}}">
<view class="tabs-container">
  <view class="tab-titles">
    <view class="tab-title {{activeTab == 0 ? 'active': ''}}" bindtap="switchTab" data-tab="0">My Bookings</view>
    <view class="tab-title {{activeTab == 1 ? 'active': ''}}" bindtap="switchTab" data-tab="1">My Favourites</view>
  </view>
  <view class="tab-page" wx:if="{{activeTab == 0}}">
    
    <!-- <view wx:key='index' wx:for="{{activities}}" wx:for-item="activity" >
     <card activity="{{activity}}" />
    </view> -->

  </view>
  <view class="tab-page" wx:if="{{activeTab == 0}}">
    <view wx:for="{{bookings}}" wx:for-item="session" >
    <sessions-card activity="{{session}}" />
  </view>
  </view>
</view>
</view>

