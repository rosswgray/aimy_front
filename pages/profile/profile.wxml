<!--pages/profile/profile.wxml-->

<!-- Tree/Image Avatar -->
<view class="img-container">
  <image src="https://us.123rf.com/450wm/kudryashka/kudryashka1609/kudryashka160900327/64881825-stock-vector-colorful-art-tree-for-your-design-vector-illustration.jpg?ver=6" class="img-background"></image>
  <view wx:if="{{loggedIn}}" class="banner-welcome">
    <image class="avatar-large" alt="avatar-large" src="{{userInfo.avatarUrl}}" />
    <view class="welcome">Welcome {{userInfo.nickName}}!</view>
  </view>
</view>

