      placeholder="Child Development Activity" 
      style="flex-shrink: 0;"></image>
   <!-- ACTIVITY TITLE -->
  <!-- <view class="activity-title">Activity Title</view> -->
  <view class="container-title">
    <view class="activity-title">{{activity.title}}</view>
    <view class="container-item" style="position: relative">
      <image id="heart" src="../images/Image1.png"></image>
      <view style="color: #FE354C; font-size: 20rpx; position: absolute; top: 15rpx; left: 35rpx;">56</view>
    </view>
  </view>
</view>


