<!-- INSTRUCTOR INFO -->

<view class="instructor-view">
  <image class="instructor-avatar" alt="avatar-large" src="https://ca.slack-edge.com/T02NE0241-U01C6Q1297G-9ff34b007638-512"/>
  <view>
    <text class="instructor-name">{{activity.organizer.name}}</text>
    <view>📞 182-888-8888</view>
  </view>
</view>


<!-- ACTIVITY DESCRIPTION -->

<view class="activity-description">
  <view class="description-h2">Description</view>
  <text class="description-p">{{activity.description}}</text>
</view>


