<!-- SWIPER  -->
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <swiper-item wx:for="{{imgUrls}}">
    <view class="slider-parent" style="height: 600rpx;">
      <image src="{{item}}" class="slide-image" style="width: 100%; height: 400rpx;"/>
    </view>
  </swiper-item>
</swiper>

<view class="container">
  <!-- Info Container-->
  <view class="info-head">
      <view class="title">{{activity.title}}</view>
      <view class="heart-div" bindtap="switchHeart"> 
        <image  class="activity-heart" mode="aspectFit" src="{{ activity.is_faved ? '/../pages/images/fullheart.png' : '/../pages/images/heart.jpg'}}"> </image>
        <view class="body">{{activity.num_of_favs}}</view>
      </view>
  </view>
  <view class="info-container">

    <view class="body">{{activity.date}}</view>
    <view class="body">{{activity.sessions[activeSession].start_hour}}:00 - {{activity.sessions[activeSession].end_hour}}:00</view>
    <view class="address-container body" bindtap="goToMap">üìç {{activity.address}}</view>
    
    <!-- Description -->
    <view class="sub-title">Description</view>
    <view class="body">{{activity.description}}</view>

    <!-- Signups -->
    <view class="sub-title">Sign Ups</view>
    <progress class="progress" percent="80" stroke-width="8" color="#63EB34" />
    <view class="flex-justify-between body">
      <view>8 attendees</view>
      <view>10</view>
    </view>

    <!-- Instructor -->
    <view class="sub-title">Instructor</view>
    <view class="instructor-container" bindtap="goToBio" data-instructor-id="{{activity.sessions[activeSession].instructor_id}}">
      <image class="avatar" alt="avatar-large" src="{{activity.sessions[activeSession].instructor_pic}}"/>
      <view class="flex-column-centered">
        <view class="sub-title" style="margin-top: 0;">{{activity.sessions[activeSession].instructor_name}}</view>
        <view class="body" style="margin-bottom: 0;">‚úÜ {{activity.organizer.phone_number}}</view>
      </view>
    </view>

    <!-- Buttons -->
    <view class="btn-container">
      <button class="btn btn-share" open-type="share">Share</button>
      <button wx:if="{{ user.hasInfo }}" bindtap="confirmBooking" data-id="{{activity.sessions[0].session_id}}" class="btn btn-book">Book</button>
      <button wx:else class="btn btn-book" open-type="getUserInfo" data-id="{{activity.sessions[0].session_id}}" bindgetuserinfo="bindGetUserInfo" >Book</button>
    </view>
  </view>
</view>

<!-- Session Descriptions -->
<view class="sessions-card-container">
  <view class="upcoming-sessions">Upcoming Sessions</view>
  <view wx:for="{{activity.sessions}}" wx:for-item="session" wx:key="{{index}}">
    <sessions-card 
      activity="{{session}}" 
      arrayIdx="{{index}}"
      activeIdx="{{activeSession}}"
      bindselectSession="selectSession"
    />
  </view>
</view>