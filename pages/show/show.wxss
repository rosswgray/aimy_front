.info-head {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  align-items: center;
}

.title {
  font-size: 48rpx;
  color: #4A7FB0;
  font-weight: bold;
  margin-top: 8rpx;
}

.activity-heart {
  height: 80rpx; 
  width: 60rpx;
  margin-right: 40rpx;
}

.body {
  font-size: 32rpx;
  font-weight: lighter;
  margin: 16rpx 0;
}

.sub-title {
  font-size: 32rpx;
  color: #4A7FB0;
  font-weight: bold;
  margin-top: 32rpx;
}

.info-container {
  width: 100%;
  padding: 8rpx 0;
  box-sizing: border-box;
}

.info-container > .title {
  font-size: 48rpx;
  color: #4A7FB0;
  font-weight: bold;
}

.info-container > .address-container {
  margin: 16rpx 0;
  border-top: 1rpx solid rgba(0,0,0,0.2);
  border-bottom: 1rpx solid rgba(0,0,0,0.2);
  padding: 16rpx 0;
}

.info-container > .progress {
  width: 100%;
  margin: 16rpx 0;
} 

.info-container > .instructor-container {
  display: flex;
  width: 100%;
  margin: 16rpx 0;
  border-top: 1rpx solid rgba(0,0,0,0.2);
  border-bottom: 1rpx solid rgba(0,0,0,0.2);
  padding: 16rpx 0;
}

.instructor-container > .avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  margin-right: 16rpx;
}

.btn-container {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 32rpx 0;
  padding: 16rpx 0;
}

.btn-container > .btn {
  color: white;
  margin: 0 16rpx;
}

.btn-container > .btn-share {
  background: #F86B8E;
}

.btn-container > .btn-book {
  background:  #0ea094;
}

.flex-progress {
  margin-top: 15rpx;
  display: flex;
  justify-content: center;
}

.flex-capacity {
  display: flex;
  justify-content: space-between;
  margin-left: 5%;
  margin-top: 10rpx;
  width: 90%;
}

.sessions-card-container {
  margin: 2px 15px 2px 15px;
}

.upcoming-sessions {
margin-left: 1%;
font-size: 35rpx;
color: #4A7FB0;
font-weight: bold;
margin-top: 30rpx;
margin-bottom: 30rpx;
}
