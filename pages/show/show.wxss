/* For the pop-up */
.wrap-pop {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 5000;
  /* transform: translateY(2000px); */
}

.mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: black;
  opacity: 0.3;
  display: flex;
  flex-direction: row;
  z-index: 9001;
  /* animation */
  /* transform: translateY(2000px);
  opacity: 0; */
}

.h1 {
  font-size: large;
  font-weight: 600;
  text-align: center;
  padding: 20rpx 0;
}

.popup {
  background: #397fc2;
  top: 50%;
  left: 50%;
  height: 40vh;
  padding: 25rpx;
  width: 80vw;
  margin: 50rpx;
  opacity: 1;
  border-radius: 15px;
  z-index: 9002;
  /* position: relative; */
  color: white;
}

.close-icon {
  position: absolute;
  width: 26px;
  height: 26px;
  right: 50px;
  /* padding: 30px; */
  z-index: 9003;
}