.body {
  font-size: 32rpx;
  font-weight: lighter;
  margin: 16rpx 0;
}

.sub-title {
  font-size: 32rpx;
  color: #4A7FB0;
  font-weight: bold;
  margin-top: 32rpx;
}

.info-container {
  width: 100%;
  padding: 32rpx 0;
  box-sizing: border-box;
}

.info-container > .title {
  font-size: 48rpx;
  color: #4A7FB0;
  font-weight: bold;
}

.info-container > .address-container {
  margin: 16rpx 0;
  border-top: 1rpx solid rgba(0,0,0,0.2);
  border-bottom: 1rpx solid rgba(0,0,0,0.2);
  padding: 16rpx 0;
}

.info-container > .progress {
  width: 100%;
  margin: 16rpx 0;
} 

.info-container > .instructor-container {
  display: flex;
  width: 100%;
  margin: 16rpx 0;
  border-top: 1rpx solid rgba(0,0,0,0.2);
  border-bottom: 1rpx solid rgba(0,0,0,0.2);
  padding: 16rpx 0;
}

.instructor-container > .avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  margin-right: 16rpx;
}

.btn-container {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 32rpx 0;
  padding: 16rpx 0;
}

.btn-container > .btn {
  color: white;
  margin: 0 16rpx;
}

.btn-container > .btn-share {
  background: #F86B8E;
}

.btn-container > .btn-book {
  background:  #0ea094;
}


/* ------------- */




.show-banner {
  display: flex;
  justify-content: space-between;
  margin: 15rpx 0rpx 0rpx 40rpx;
}



.activity-heart {
  height: 34px; 
  width: 20px;
}


.activity-heart {
  height: 80rpx; 
  width: 60rpx;
  margin-right: 40rpx;
}

.activity-log {
  display: flex;
  flex-direction: column;
  padding: 10px;
  margin-left: 10px;
}

.date-and-book {
  display: flex;
  justify-content: space-between;
}

.date {
  font-size: 30rpx;
  font-weight: lighter;
  margin-bottom: 20rpx;
}

.container-top {
  display: flex;
  width: 95%;
  justify-content: space-between;
  margin-left: 5%;
}

.container-book {
  margin-right: 3%;
}

  .address {
    display: flex;
    height: 100%;
    justify-content: space-between;
  }

.location {
  font-size: 30rpx;
  font-weight: lighter;
}

.btn-map {
  background-color: white;  
  font-size: 10px;
  border-radius: 5px;
  color: black;
  font-weight: normal;
}

.progress {
  width: 90%;
}

.flex-progress {
  margin-top: 15rpx;
  display: flex;
  justify-content: center;
}

.flex-capacity {
  display: flex;
  justify-content: space-between;
  margin-left: 5%;
  margin-top: 10rpx;
  width: 90%;
}

.instructor-view {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
}

.icon {
  position: absolute;
  top: 5%;
  left: 15%;
}

.avatar-view {
  display: flex;
  align-items: flex-end;
}



.instructor-name {
  font-size: 40rpx;
  color: #4A7FB0;
  font-weight: bold;
}

.activity-description {
  margin-left: 5%;
}


.sessions-card-container {
  margin: 2px 15px 2px 15px;
}

.upcoming-sessions {
margin-left: 1%;
font-size: 35rpx;
color: #4A7FB0;
font-weight: bold;
margin-top: 30rpx;
margin-bottom: 30rpx;
}
.info-head {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  align-items: center;
}