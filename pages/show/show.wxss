.activity-title {
  font-size: 45rpx;
  color: #4A7FB0;
  font-weight: bold;
  padding: 10px;
}

.activity-log {
  display: flex;
  flex-direction: column;
  padding: 10px;
  margin-left: 10px;
}

.date-and-book {
  display: flex;
  justify-content: space-between;

}

.date {
  font-size: 30rpx;
  font-weight: lighter;
  margin-bottom: 20rpx;
}

.container-top {
  display: flex;
  width: 95%;
  justify-content: space-between;
  margin-left: 5%;
}

.container-book {
  margin-right: 3%;
}

.booking-button {
    background-color:  #0ea094;
    color: white;
    font-weight: bold;
    font-size: 30rpx;
    text-align: center;
    border-radius: 6%;
    /* padding: 15rpx 45rpx 15rpx 45rpx; */
    margin-right: 15%;
  }

  .address {
    display: flex;
    height: 100%;
    justify-content: space-between;
  }

.location {
  font-size: 30rpx;
  font-weight: lighter;
}

.btn-map {
  background-color: #E5E5E5;  
  font-size: 10px;
  border-radius: 5px;
  color: black;
  font-weight: normal;
}

.progress {
  width: 90%;
}

.flex-progress {
  margin-top: 15rpx;
  display: flex;
  justify-content: center;
}

.flex-capacity {
  display: flex;
  justify-content: space-between;
  margin-left: 5%;
  margin-top: 10rpx;
  width: 90%;
}

.instructor-view {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
}

.icon {
  position: absolute;
  top: 5%;
  left: 15%;
}

.avatar-view {
  display: flex;
  align-items: flex-end;
}

.instructor-avatar {
  width: 65px;
  height: 65px;
  border-radius: 50%;
  margin-right: 5px;
  /* margin-left: 3%; */
}

.instructor-name {
  font-size: 40rpx;
  color: #4A7FB0;
  font-weight: bold;
}

.activity-description {
  margin-left: 5%;
}

.description-h2 {
  font-size: 35rpx;
  color: #4A7FB0;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.description-p {
  font-size: 30rpx;
  font-weight: lighter;
}

.sessions-card-container {
  margin: 2px 15px 2px 15px;
}

.upcoming-sessions {
margin-left: 1%;
font-size: 35rpx;
color: #4A7FB0;
font-weight: bold;
margin-top: 30rpx;
margin-bottom: 30rpx;
}



