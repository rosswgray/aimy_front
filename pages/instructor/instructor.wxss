/* pages/instructor/instructor.wxss */
.instructor-banner {
  background-color:white;
  color: #4A7FB0;
  align-items: center;
  height: 400rpx;
  display: flex;
  position: relative;
}

.image {
  border-radius: 50%;
  width: 100rpx;
  height:100rpx;
}

.avatar-large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 42%;
  transform: translate(-50%, -50%);
  position: absolute;
}

.h1 {
  color: #4A7FB0;
  font-weight: 700;
  font-size: 18px;
}
.p {
  color: #979797;
  font-size: 14px;
}