/* pages/instructor/instructor.wxss */

.container-top {
display: flex;
align-items: center;
justify-content: space-evenly;
}
.avatar.confirmation {
  position: relative;
}
.icon {
  position: absolute;
  right: -50rpx;
  top: 30rpx;
}

.instructor-banner {
  /* background-color:white; */
  color: #4A7FB0;
  align-items: center;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  margin-right: 220rpx;
}

.container-info {
width: 90%;
margin: 0 auto;
overflow: hidden;
background: #f8f5f5;
box-shadow: 0 0 10px rgba(0,0,0,0.1);
border-radius: 6rpx;
}

.h1-name {
  font-weight: 700;
  padding-top: 230rpx;
  font-size: 40rpx;
  color: #4A7FB0;
}
.image {
  border-radius: 50%;
  width: 100rpx;
  height:100rpx;
}

.avatar-large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 42%;
  transform: translate(-50%, -50%);
  position: absolute;
}

.h1 {
  font-size: 35rpx;
  color: #4A7FB0;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.p {
  color: #979797;
  font-size: 14px;
  margin-bottom: 50rpx;
}
.instruction-info {
  margin-left: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.picker {
  color: red;
}
.icon-sm {
  width: 21px;
  height: 12px
}

.upcoming {
  margin: 20rpx 0rpx 0rpx 50rpx;
}
