<!-- ACTIVITY CARD -->
<view data-id='{{activity.id}}' bindtap='goToShow' class="card">
  <view class="img-and-price">
    <image class="image" mode="aspectFill" src="{{activity.main_photo}}" 
      placeholder="Child Development Activity" 
      style="flex-shrink: 0;"></image>
 
  </view>
    <view class="card-info">
      <view class="activity-title-provider">
        <view class="activity-title>">{{activity.title}}</view>
        <view class="provider-name"> by {{activity.organizer.name}}</view>
      </view>
  </view>
</view>

