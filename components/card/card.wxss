.card-info {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
}

.activity-title-provider {
  max-width: 450rpx;
}

.activity-title .ellipsis {
  font-size: 35rpx;
  font-weight: bold;
  max-width: 315px;
  
}

.provider-name{
  font-size: 12px;
  opacity: .7;
  margin: 5rpx 0 0 0;
}

.activity-log {
  align-items: right;
}

.date {
  font-size: 20rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.activity-heart {
  height: 45rpx;
  width: 45rpx;
  margin-right: 10rpx;
}

.capacity {
  font-weight: bolder;
  font-size: 30rpx;
  color: #4A7FB0;
}

.location {
  font-size: small;
  font-weight: bold;
}
