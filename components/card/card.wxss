.card {
  overflow: hidden;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  width: 650rpx;
  margin-left: 54rpx;
  border-radius: 15rpx;
  margin-top: 20px;
  margin-bottom: 40px;
}

.image {
  height: 250rpx;
  width: 100%;
  object-fit: cover;
}

.img-and-price {
  display: flex;
  position: relative;
}

