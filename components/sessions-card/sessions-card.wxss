 .activity-book {
   margin: 20rpx;
   text-align: center;
   display: flex;
   flex-direction: column;
   justify-content: space-between;
 }

 .btn {
   background-color:  grey ;
   color: white;
   font-weight: bold;
   font-size: 24rpx;
   text-align: center;
   padding-right: 110rpx;
   box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
 }

 .btn-active {
  background: #0ea094;
}