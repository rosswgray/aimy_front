/* components/sessions-card/sessions-card.wxss */

.sessions-card {
  display: flex;
  justify-content: space-between;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  min-height: 170rpx;
  width: 100%;
  margin-bottom: 35rpx;
  background-color: white;
 }

 .img-info {
   display: flex;
   flex-grow: 1;
 }

 .instructor-avatar {
  border-radius: 5px 0 0 5px ;
  box-shadow: grey;
  height: 100%;
  width: 190rpx;
 }

 .card-info {
   padding: 19rpx;
 }

 .avtivity-title {
  font-size: 16px;
  color: #4A7FB0;
  font-weight: bolder;
  max-width: 53vw;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 3rpx;
  height: 23px;
}
 .avtivity-organizer {
  font-size: 28rpx;
  font-weight: bold;
  padding-right: 30rpx;
}

 .date-time {
  font-size: 24rpx;
  font-weight: lighter;
  margin-bottom: 5rpx;
}
.time {
  font-size: 24rpx;
  font-weight: lighter;
  margin-bottom: 5rpx;
}
 .right-box {
  flex-shrink: 0;
  display: flex;
  padding: 25rpx 10rpx;
 }

